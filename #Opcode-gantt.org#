(defun scrum-get-fibonacci ()
(defun scrum-get-developers ()
  "get list of developer (name . wpd)"
  (let (ret)
    (setq ret (org-entry-properties (point) 'standard))
    (setq ret (remove-if (lambda (ii)                  ;; filter out non-developer properties
                           (or
                            (< (length (car ii)) 5)
                            (not (string= (substring (car ii) 0 4) "wpd-"))))
                         ret))
    (setq ret (mapcar (function (lambda (ii) (cons     ;; remove the 'wpd-' prefix to get the name
                                              (substring (car ii) 4 (length (car ii)))
                                              (string-to-number (cdr ii)))))
                      ret))
    ret))
(let (a)
(setq a 0)
(org-map-entries (buffer-substring (point) (line-end-position)) "Effort=.*")

)


  (save-excursion
    (let (tasks sum)
      (setq sum 0)
      (org-map-entries (lambda ()
      (setq fibo (org-entry-get (point) "Effort"))
      (when fibo (progn
          (push fibo tasks)
          (setq sum (+ sum (string-to-number fibo)))
      ))))
 sum
)

) "Effort=[[:digit:]].*"))
      (goto-char tasks)

))

(save-excursion
(let (efforts)
(org-map-entries (lambda () (setq efforts (point))) "Effort=.*")
efforts
))

(let (times)
(setq times 0)
(org-map-entries (setq times (+ times (string-to-int (or (org-entry-get nil "Effort") "0")))))
times))
)
(scrum-get-fibonacci)
